{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "weatherForecast" : {
        "ClusterId": "weatherCluster",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "weatherCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "api1": {
            "Address": "http://api1:8080/weatherforecast"
          },
          "api2": {
            "Address": "http://api2:8080/weatherforecast"
          }
        }
      }
    }
  }
}